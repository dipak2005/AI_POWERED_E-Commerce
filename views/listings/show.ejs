<% layout("/layouts/boilerplate.ejs") %>
<body>
    <br>
    <h1>Product Listings</h1>

    <div class="container">
        <% listings.forEach(function(listing) { %>
        <div class="one-div">
            <h2><%= listing.name %></h2>
            <p><%= listing.description %></p>
            <p>Price: $<%= listing.price %></p>
            <img src="<%= listing.image %>" alt="<%= listing.name %>" width="200" /> <br><br>

            <form action="/product/<%= listing._id %>">
                <button>See More</button>
            </form>
        </div>
        <% }); %>
    </div>

    <style>
        button {
            cursor: pointer;
            transform: scale(1.1);
            padding: 0.3rem;
            margin-left: 1rem;
            border-radius: 0.5rem;
        }

        button:hover {
            color: rgb(83, 81, 81);
        }

        .one-div {
            border: 1px solid red;
            width: 30%;
            margin: 1rem;
            padding: 1rem;
            border-radius: 10%;
        }

        .one-div:hover {
            box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);
            opacity: 0.9;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
        }
    </style>
</body>
