<% layout("layouts/boilerplate.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= listing.name %> - Product Details</title>

    <% if (success && success.length > 0) { %>
  <div class="alert alert-success flash-message">
    <%= success %>
    <div class="progress-bar"></div>  <!-- Loading bar -->
  </div>
<% } %>

    <!-- Bootstrap CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <style>

        .flash-message {
  position: relative;
  padding: 15px;
  margin: 10px 0;
  border-radius: 5px;
  transition: opacity 0.5s ease-in-out;
}

.progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 3px;
  width: 100%;
  background: #28a745; /* Green color */
  animation: load 3s linear forwards;
}

@keyframes load {
  from {
    width: 100%;
  }
  to {
    width: 0%;
  }
}


        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            margin: 2rem auto;
            padding: 2rem;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .product-header {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .product-image {
            width: 100%;
            max-width: 400px;
            height: auto;
            border-radius: 10px;
        }

        .product-info {
            flex: 1;
        }

        .product-title {
            font-size: 2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .product-description {
            font-size: 1rem;
            color: #666;
            margin-bottom: 1.5rem;
        }

        .price-section {
            margin-bottom: 1.5rem;
        }

        .original-price {
            font-size: 1.2rem;
            color: #999;
            text-decoration: line-through;
        }

        .discounted-price {
            font-size: 1.5rem;
            color: #c62828;
            font-weight: 600;
        }

        .availability {
            font-size: 1rem;
            color: #28a745;
            font-weight: 500;
            margin-bottom: 1.5rem;
        }

        .specifications, .reviews, .warranty {
            margin-top: 2rem;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 1rem;
        }

        .specifications ul {
            list-style-type: none;
            padding: 0;
        }

        .specifications li {
            font-size: 1rem;
            color: #666;
            margin-bottom: 0.5rem;
        }

        .review-form {
            margin-top: 2rem;
        }

        .review-form label {
            font-size: 1rem;
            font-weight: 500;
            color: #333;
        }

        .review-form input[type="range"] {
            width: 100%;
            margin: 0.5rem 0;
        }

        .review-form textarea {
            width: 100%;
            padding: 0.5rem;
            border-radius: 5px;
            border: 1px solid #ddd;
            margin-bottom: 1rem;
        }

        .review-form button {
            background-color: #c62828;
            color: #ffffff;
            border: none;
            padding: 8px 8px 8px 8px;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .review-form button:hover {
            background-color: #e31919;
        }

        .review-list {
            margin-top: 1.5rem;
        }

        .review-item {
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 5px;
            margin-bottom: 1rem;
        }

        .review-item h5 {
            font-size: 1.1rem;
            font-weight: 600;
            color: #333;
        }

        .review-item p {
            font-size: 0.9rem;
            color: #666;
        }

        .warranty-info {
            font-size: 1rem;
            color: #666;
        }

        .see-more {
            text-decoration: none;
        }
        .see-more:hover {
            text-decoration: underline;
        }

        .del {
            padding: 5px;
        }

        .star-rating {
            direction: rtl;
            display: inline-block;
            font-size: 30px;
        }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: gray;
            cursor: pointer;
            transition: color 0.2s ease;
        }

        .star-rating input:checked ~ label {
            color: gold;
        }

        .star-rating input:hover ~ label,
        .star-rating label:hover {
            color: gold;
        }

        .star-rating input:checked + label,
        .star-rating input:checked + label + label,
        .star-rating input:checked + label + label + label,
        .star-rating input:checked + label + label + label + label {
            color: gold;
        }

        .star-rating {
            margin-left: 10px;
        }

        .star-rating label {
            font-size: 25px;
        }

        .add-to-cart {
            padding: 8px;
            background-color: crimson;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            animation: pulse 0.8s infinite alternate;
        }

        .add-to-cart:hover {
            background-color: green;
            animation: none;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            100% {
                transform: scale(1.1);
            }
        }

        .see-more-link {
            transform: scale(0.9);
        }

        .review-item {
            width: 200px;
            height: 220px;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="product-header">
            <div>
                <img src="<%= listing.image %>" alt="<%= listing.name %>" class="product-image">
            </div>
            <div class="product-info">
                <h1 class="product-title"><%= listing.name %></h1>
                <p class="product-description"><%= listing.description %></p>
                <div class="price-section">
                    <p class="original-price">Before: <span>&#8377; 166.56</span></p>
                    <p class="discounted-price">Now: &#8377;<%= listing.price %></p>
                </div>
                <p class="availability">In Stock Available</p>
                <p>Category: <%= listing.category %></p>
            </div>
        </div>

        <div class="specifications">
            <h3 class="section-title">Specifications</h3>
            <ul>
                <li>Material: High-quality plastic</li>
                <li>Dimensions: 10 x 5 x 3 inches</li>
                <li>Weight: 0.5 kg</li>
                <li>Color: Black</li>
            </ul>
        </div>

        <form action="/listing/product/<%= listing._id %>/cart">
            <button class="add-to-cart">Add to Cart</button>
        </form>

<div class="reviews review-form">
    <h3 class="section-title">Customer Reviews</h3>

    <%   if(listing.reviews.length > 0) { %>
        <div class="review-list">
        <% for (let i = 0; i < listing.reviews.length; i++) { %>
            <div class="review-item review-<%= i %>" style="<%= i >= 3 ? 'display: none;' : '' %>">
                <h5>Author: <%= listing.reviews[i].author || 'Anonymous' %></h5>
                <p><%= listing.reviews[i].comment %></p>
                <p class="rating">
                    <% for (let j = 0; j < Math.floor(listing.reviews[i].rating); j++) { %>
                        ★
                    <% } %>
                    <% for (let j = Math.floor(listing.reviews[i].rating); j < 5; j++) { %>
                        ☆
                    <% } %>
                </p>

                <form action="/listing/<%= listing._id %>/review_delete/<%= listing.reviews[i]._id %>" method="POST">
                    <button class="review-form" type="submit">Delete</button>
                </form>

            </div>
        <% } %>
    </div>

    <% if (listing.reviews.length > 3) { %>
        <button id="toggleReviewsBtn" class="review-form button see-more" onclick="toggleReviews()" style="text-decoration: none;" >See More Reviews</button>
    <% } %>
</div>

<script>
    function toggleReviews() {
        let reviews = document.querySelectorAll('.review-item');
        let toggleBtn = document.getElementById('toggleReviewsBtn');
        let isExpanded = toggleBtn.innerText === "See Less Reviews";

        reviews.forEach((review, index) => {
            if (index >= 3) {
                review.style.display = isExpanded ? 'none' : 'block';
            }
        });

        toggleBtn.innerText = isExpanded ? "See More Reviews" : "See Less Reviews";
    }
</script>
    <%  }  else { %>
        <p>No reviews yet, Be first to leave a review</p>
    <%  } %>


        <div class="review-form">
    <h4>Leave a Review</h4>
    <form action="/listing/<%= listing._id %>/reviews" method="POST">
        <div class="form-group">
            <label for="rating">Rating (1 to 5)</label>
            <div class="star-rating">
                <input type="radio" id="star5" name="review[rating]" value="5">
                <label for="star5">&#9733;</label>
                <input type="radio" id="star4" name="review[rating]" value="4">
                <label for="star4">&#9733;</label>
                <input type="radio" id="star3" name="review[rating]" value="3">
                <label for="star3">&#9733;</label>
                <input type="radio" id="star2" name="review[rating]" value="2">
                <label for="star2">&#9733;</label>
                <input type="radio" id="star1" name="review[rating]" value="1">
                <label for="star1">&#9733;</label>
            </div>
        </div>
        <div class="form-group">
            <label for="comment">Your Comment</label>
            <textarea id="comment" name="review[comment]" required class="form-control" rows="4"></textarea>
            <div class="invalid-feedback">Comment is required.</div>
        </div>
        <button type="submit" class="btn btn-primary">Submit Review</button>
    </form>
</div>


        <div class="warranty">
            <h3 class="section-title">Warranty Information</h3>
            <p class="warranty-info">
                This product comes with a 1-year warranty covering manufacturing defects.
                <a href="#" class="see-more">See more</a>
            </p>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybCx1IXbNmV1Yr8azK1p6YQ6RLahldv9Uv4fFkqkknk28m64t" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-cuJfDprp5qDw/97ub42g3e3vfOqdtDnvGeM2p03Z5CU3xtj4lvSgbfBskcPq5Pbr" crossorigin="anonymous"></script>
</body>
</html>

<script>
  setTimeout(() => {
    document.querySelectorAll(".flash-message").forEach((msg) => {
      msg.style.opacity = "0"; // Fade out
      setTimeout(() => msg.remove(), 400); // Remove after fade out
    });
  }, 3000); // Disappears in 3 seconds


</script>
